import { MutationTree } from 'vuex'
import { I<%= name %>State, state as init } from '@/store/<%= name.toLowerCase() %>'
import { Types, Store, Query, Options, Loading, Dialog } from '@/store/<%= name.toLowerCase() %>/types'

const mutations: MutationTree<I<%= name %>State> = {
  [Types.clear]: (state) => {
    Object.assign(state, init())
  },
  [Types.store]: (state, action: Store) => {
    if (action.payload) {
      action.payload.forEach((prop) => {
        if (prop.id) {
          state.byIds = {
            ...state.byIds,
            [prop.id]: prop
          }
        }
      })
    } else {
      state.byIds = init().byIds
    }
  },
  [Types.query]: (state, action: Query) => {
    state.query = action.payload
  },
  [Types.options]: (state, action: Options) => {
    state.options = action.payload
  },
  [Types.loading]: (state, action: Loading) => {
    state.loading = action.payload
  },
  [Types.dialog]: (state, action: Dialog) => {
    state.dialog = action.payload
  }
}

export default mutations
